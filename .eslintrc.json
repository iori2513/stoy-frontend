{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "tabWidth": 2,
                "singleQuote": true,
                "semi": false,
                "trailingComma": "none",
                "bracketSpacing": true,
                "arrowParens": "avoid",
                "endOfLine": "auto"
            }
        ],
        "indent": ["error", 2, {"SwitchCase": 1}],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "block-spacing": "error",
        "eol-last": ["error", "always"],
        "no-var": "error",
        "no-unused-vars": "off",
        "no-undef":"off",
        "max-params": ["error", 3],
        "eqeqeq": ["error", "always"],
        "yoda": "error",
        "no-shadow": "error",
        "no-dupe-args": "error",
        "no-unreachable": "error"
    }
}
